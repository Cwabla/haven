<!DOCTYPE html>
<html>
  <head>
    <title><%= ApplicationController.get_settings.title || "New Blog" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="/css/<%=SettingsController.get_setting.css_hash%>/style.css">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>
  <body>
    <div>
    <nav class="navigation">
      <ul class="navigation-list">
      <li id="navigation-home"><%=link_to "Home", root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete  %></li>
          <% if current_user.admin == 1 %>
            <li><%= link_to "Manage Users", users_path %></li>
            <li><%= link_to "Edit Settings", controller: "settings", action: "edit", id: 1 %></li>
            <li><%= link_to "New Post", new_post_path %></li>
          <% end %>
        <% end %>
      </ul>
    </nav>
    </div>

    <% if !!@settings %>
      <% if !!@settings.title && !@settings.title.empty? %>
        <h1 class="blog_title"><%=@settings.title%></h1>
      <% end %>
      <% if !!@settings.subtitle && !@settings.subtitle.empty? %>
        <p class="lead blog_subtitle"><%=@settings.subtitle%></p>
      <% end %>
    <% end %>
    

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
