<% if current_user.admin == 1%>
<%= link_to post.datetime, post_path(post), :class => "post-date" %>
<span style="float: right;">
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</span>
<% end %>
<%= CommonMarker.render_html(post.content, :UNSAFE, PostsController::GFM_EXT).html_safe %>
