<h1>My Blog</h1>
<hr> 
<% @posts.each do |post| %>
  <small><%= link_to post.datetime.strftime("%a %b %-d, %Y"), post_path(post) %></small>
  <br>
  <%= link_to 'Edit', edit_post_path(post) %>

  <%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

  <%= CommonMarker.render_html(post.content, :UNSAFE, PostsController::GFM_EXT).html_safe %>
  <hr>
<% end %>
