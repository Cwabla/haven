<h1>Blog Settings</h1>

<%= form_with scope: :setting, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :subtitle %><br>
    <%= form.text_field :subtitle %>
  </p>
  <p>
    <%= form.label :visibility %><br />
    <%= form.radio_button :visibility, 'private', checked: true %> Private<br />
    <%= form.radio_button :visibility, 'public' %> Public<br />
  </p

  <p>
    <%= form.label :css %><br>
    <%= form.text_area :css %>
  </p>
 
  <p>
    <%= form.submit value: "Save Settings" %>
  </p>
<% end %>
