<h2>Manage Users</h2>
<%= link_to "New User", new_user_path %> |
<%= link_to "Home", posts_path %>
<hr>
<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Role</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%=user.email%></td>
      <td><%=user.name%></td>
      <td><%= user.admin == 1 ? "Admin" : "Subscriber" %></td>
      <td>
        <% if user == current_user %>
          <%= link_to "Change Password", edit_user_registration_path %> 
        <% else %>
          <%= link_to (user.admin == 1 ? "Make Subscriber" : "Make Admin"), 
            toggle_user_admin_path(user),
            method: :post %> |
          <%= link_to 'Reset Password', reset_user_password_path(user),
            method: :post %> |
          <%= link_to 'Delete User', user_path(user),
            method: :delete,
            data: { confirm: "Are you sure you want to delete #{user.name} with email: #{user.email}?" } %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
